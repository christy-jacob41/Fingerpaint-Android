<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cxj170002.fingerpaint.MainActivity">

    <com.cxj170002.fingerpaint.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="350dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/redButton"
        android:backgroundTint="@color/red"
        android:layout_marginLeft="5dp"
        android:text="Red"
        android:onClick="changeColor"
        android:layout_below="@id/paintView"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/greenButton"
        android:backgroundTint="@color/green"
        android:layout_marginLeft="5dp"
        android:text="Green"
        android:onClick="changeColor"
        android:layout_toRightOf="@id/redButton"
        android:layout_below="@id/paintView"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/blueButton"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/blue"
        android:text="Blue"
        android:onClick="changeColor"
        android:layout_toRightOf="@id/greenButton"
        android:layout_below="@id/paintView"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/blackButton"
        android:backgroundTint="@color/black"
        android:text="Black"
        android:onClick="changeColor"
        android:layout_toRightOf="@id/blueButton"
        android:layout_below="@id/paintView"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:max="20"
        android:min="3"
        android:progress="15"
        android:id="@+id/seekBar"
        android:layout_below="@id/redButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/clearButton"
        android:layout_marginLeft="5dp"
        android:text="Clear"
        android:onClick="clear"
        android:layout_below="@id/seekBar"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/undoButton"
        android:text="Undo"
        android:onClick="undo"
        android:layout_toRightOf="@id/clearButton"
        android:layout_below="@id/seekBar"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/saveButton"
        android:text="Save"
        android:onClick="save"
        android:layout_below="@id/clearButton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/openButton"
        android:text="Open"
        android:onClick="open"
        android:layout_toRightOf="@id/saveButton"
        android:layout_below="@id/undoButton"
        />
</RelativeLayout>